from mininet.topo import Topo

class Lab4Topo( Topo ):
    def __init__( self ):
        Topo.__init__( self )
        h1 = self.addHost( 'h1' )
        h2 = self.addHost( 'h2' )
        h3 = self.addHost( 'h3' )
        h4 = self.addHost( 'h4' )

        s1 = self.addSwitch( 's1' )
        s2 = self.addSwitch( 's2' )
        s3 = self.addSwitch( 's3' )

        self.addLink(s1, h1, 1)
        self.addLink(s1, h3, 2)
        self.addLink(s3, h2, 1)
        self.addLink(s3, h4, 2)

        self.addLink(s1, s3, 3, 3)
        self.addLink(s1, s2, 4, 1)
        self.addLink(s2, s2, 4, 2)

topos = { 'l4topo': ( lambda: Lab4Topo() ) }

